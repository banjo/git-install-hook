{
    "name": "git-install-hook",
    "type": "module",
    "version": "0.0.10",
    "private": false,
    "description": "Git hook to install dependencies on branch change or after a merge whenever the lock file changes",
    "author": "Anton Ã–dman <anton.odman@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/banjo/git-install-hook#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/banjo/git-install-hook.git"
    },
    "bugs": "https://github.com/banjo/git-install-hook/issues",
    "keywords": [],
    "sideEffects": false,
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": "dist/bin.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint --ext .js,.ts,.json .",
        "prepublishOnly": "nr build",
        "release": "bumpp && npm publish",
        "start": "esno src/index.ts",
        "test": "vitest --watch=false",
        "test:dev": "vitest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "dependencies": {
        "debug": "^4.3.4",
        "execa": "^7.1.1",
        "globby": "^13.1.3",
        "ora": "^6.1.2",
        "picocolors": "^1.0.0",
        "prompts": "^2.4.2",
        "ttys": "^0.0.3"
    },
    "devDependencies": {
        "@antfu/ni": "^0.20.0",
        "@banjoanton/eslint-config": "^0.1.4",
        "@banjoanton/prettier-config": "^0.1.2",
        "@banjoanton/utils": "^0.1.41",
        "@types/debug": "^4.1.7",
        "@types/node": "^18.15.3",
        "@types/prompts": "^2.4.3",
        "bumpp": "^9.0.0",
        "cleye": "^1.3.2",
        "eslint": "^8.36.0",
        "esno": "^0.16.3",
        "lint-staged": "^13.2.0",
        "pnpm": "^7.29.3",
        "prettier": "^2.8.4",
        "simple-git-hooks": "^2.8.1",
        "tsup": "^6.6.3",
        "typescript": "^4.9.5",
        "vite": "^4.2.0",
        "vitest": "^0.29.3"
    },
    "prettier": "@banjoanton/prettier-config",
    "simple-git-hooks": {
        "pre-commit": "pnpm exec lint-staged",
        "post-checkout": "nr start --prompt"
    },
    "lint-staged": {
        "*": [
            "prettier --write --ignore-unknown",
            "eslint --fix"
        ]
    },
    "ling-staged": {
        "*": [
            "prettier --write --ignore-unknown",
            "eslint --fix"
        ]
    }
}
